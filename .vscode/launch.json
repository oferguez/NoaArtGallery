{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Vitest",
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "args": [
                "--run",
                "--inspect-brk",
                "--no-file-parallelism"
            ],
            "autoAttachChildProcesses": true,
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\main.jsx",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}